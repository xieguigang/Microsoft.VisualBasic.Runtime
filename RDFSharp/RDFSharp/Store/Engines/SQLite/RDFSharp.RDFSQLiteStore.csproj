<?xml version="1.0" encoding="utf-8"?>
<Project ToolsVersion="4.0" DefaultTargets="Build" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <!-- RDFSharp.RDFSQLiteStore project properties -->
  <PropertyGroup>
    <ProductVersion>9.0.30729</ProductVersion>
    <SchemaVersion>2.0</SchemaVersion>
    <ProjectGuid>{5C96900F-2B4B-446A-B02F-32BB289E21E0}</ProjectGuid>
    <OutputType>Library</OutputType>
    <AppDesignerFolder>Properties</AppDesignerFolder>
    <RootNamespace>RDFSharp.Store</RootNamespace>
    <AssemblyName>RDFSharp.RDFSQLiteStore</AssemblyName>
  </PropertyGroup>

  <!-- RDFSharp.RDFFirebirdStore build configurations -->
  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
    <Platform>AnyCPU</Platform>
    <DebugSymbols>true</DebugSymbols>
    <DebugType>full</DebugType>
    <Optimize>false</Optimize>
    <OutputPath>..\..\..\bin\Debug\</OutputPath>
    <DefineConstants>DEBUG;TRACE;</DefineConstants>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>4</WarningLevel>
  </PropertyGroup>
  <PropertyGroup Condition="'$(Configuration)'=='Release'">
    <TargetFrameworkVersion>v4.0</TargetFrameworkVersion>
    <Platform>AnyCPU</Platform>
    <DebugType>none</DebugType>
    <Optimize>true</Optimize>
    <OutputPath>..\..\..\bin\Release\</OutputPath>
    <ErrorReport>prompt</ErrorReport>
    <WarningLevel>0</WarningLevel>
  </PropertyGroup>

  <!-- Microsoft .NET references -->
  <ItemGroup>
    <Reference Include="System" />
    <Reference Include="System.Core" />
    <Reference Include="System.Data" />
  </ItemGroup>

  <!-- 3rd party references -->
  <Choose> 

    <!-- x64 -->
    <When Condition="'$(PROCESSOR_ARCHITECTURE)'=='AMD64' Or '$(PROCESSOR_ARCHITEW6432)'=='AMD64'">  
      <ItemGroup>
        <Reference Include="System.Data.SQLite">
          <HintPath>Library\x64\System.Data.SQLite.dll</HintPath>
          <Private>True</Private>
        </Reference>
      </ItemGroup>
    </When>

    <!-- x86 -->
    <Otherwise>
      <ItemGroup>
        <Reference Include="System.Data.SQLite">
          <HintPath>Library\x86\System.Data.SQLite.dll</HintPath>
          <Private>True</Private>
        </Reference>
      </ItemGroup>
    </Otherwise>

  </Choose>
  
  <!-- RDFSharp.RDFSQLiteStore sources -->
  <ItemGroup>
    <!-- Assembly -->
    <Compile Include="Properties\AssemblyInfo.cs" />
    <!-- Store -->
    <Compile Include="RDFSQLiteStore.cs" />
  </ItemGroup>

  <!-- RDFSharp.RDFSQLiteStore template -->
  <ItemGroup>
    <EmbeddedResource Include="Template\RDFSQLiteTemplate.db">
      <Visible>False</Visible>
    </EmbeddedResource>
  </ItemGroup>

  <!-- RDFSharp project reference -->
  <ItemGroup>
    <ProjectReference Include="..\..\..\RDFSharp.csproj">
      <Project>{1EEA1A7E-A661-4745-810E-FBEB9F20B6FC}</Project>
      <Name>RDFSharp</Name>
      <Private>False</Private>
    </ProjectReference>
  </ItemGroup>

  <Import Project="$(MSBuildToolsPath)\Microsoft.CSharp.targets" />
</Project>